<?xml version="1.0" encoding="UTF-8"?>
<!-- !DOCTYPE PilotixPilot SYSTEM "pilotix.pilot.dtd"> -->
<PilotixPilot PilotixVersion="0.5">
    <Description>
        <FirstName>Florent</FirstName>
        <FamilyName>Sithimolada </FamilyName>
        <Photo>florent.sithimolada.free.fr/Photo.jpg</Photo>
        <Comment>Oui je suis une quiche :)</Comment>
    </Description>
    <Interface l="640" h="400" />
    <Keymap>
        <Action name="ACCELERATE">VK_SHIFT</Action>
        <Action name="USE">VK_SPACE</Action>
        <Action name="LEFT">VK_LEFT</Action>
        <Action name="RIGHT">VK_RIGHT</Action>
        <Action name="CAMERA_ZOOM_IN">VK_ADD</Action>
        <Action name="CAMERA_ZOOM_OUT">VK_SUBTRACT</Action>
        <Action name="CAMERA_ROTATION_MODE">VK_NUMPAD0</Action>
        <Action name="CAMERA_CENTER">VK_NUMPAD5</Action>
        <Action name="CAMERA_LEAN_BACKWARD">VK_NUMPAD2</Action>
        <Action name="CAMERA_LEAN_FORWARD">VK_NUMPAD8</Action>
    </Keymap>
    <Ship name="SimpleShip" />

    <PlugIn name="AutoPilot" version="0.5" enable="true">
        <Var name="ON_AT_START">true</Var>
        <Var name="SPEED_ALLOWED">10</Var>
        <Var name="ICON_PATH">autopilot.jpg</Var>
    </PlugIn>
</PilotixPilot>
